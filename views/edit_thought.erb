<div class="card card-narrow">
    <form action="/thought/<%= thought["id"]%>" method="post">
        <input type="hidden" name="_method" value="put" required>
        <input 
        required
        class="input input-light input-block" 
        name="title" 
        type="text" 
        value="<%= thought["title"] %>""
        placeholder="Title..."
        >
        <textarea 
        required
        class="input input-light input-text-area input-block" 
        name="content" 
        cols="30" 
        rows="10"
        placeholder="Thought..."
        ><%= thought["content"] %></textarea>
        <button class="large-button large-button-positive">Submit</button>
        <div class="character-counter"> <p class="character-count">0</p> <p class="bold">/</p> <p>300</p> </div>
    </form>
</div>

<script src="/scripts/characterCounter.js"></script>